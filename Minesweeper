<body>
  <div class="game">
    <h1>Minesweeper</h1>
    <div class="top">
      <div>
        Difficulty:
        <select id="difficulty">
          <option value="10">Easy</option>
          <option value="15">Medium</option>
          <option value="20">Hard</option>
        </select>
      </div>
      <button onclick="startGame()">Restart</button>
    </div>
      <button onclick="startGame()">Restart</button>
    </div>
    <div id="grid" class="grid"></div>
  </div>

  <script>
    // ===============================
// GAME CONFIGURATION
// ===============================

// Grid size (9x9)
const SIZE = 9;

// Default mine count (will change with difficulty)
let MINES = 10;

const gridEl = document.getElementById("grid");
const mineCountEl = document.getElementById("mineCount");

// Stores all cell data
let cells = [];

// Prevents input after win/lose
let gameOver = false;

    // Starts or restarts the game
function startGame() {
      // Read difficulty selection
      MINES = Number(document.getElementById("difficulty").value);
      gameOver = false;
      cells = [];
      gridEl.innerHTML = "";
      gridEl.style.gridTemplateColumns = `repeat(${SIZE}, 34px)`;
      mineCountEl.textContent = MINES;

      // create cells
      for (let i = 0; i < SIZE * SIZE; i++) {
        cells.push({
          mine: false,
          open: false,
          flag: false,
          count: 0
        });
      }

      // place mines
      let placed = 0;
      while (placed < MINES) {
        const i = Math.floor(Math.random() * cells.length);
        if (!cells[i].mine) {
          cells[i].mine = true;
          placed++;
        }
      }

      // calculate numbers
      for (let i = 0; i < cells.length; i++) {
        if (cells[i].mine) continue;
        cells[i].count = neighbors(i).filter(n => cells[n].mine).length;
      }

      // render
      cells.forEach((_, i) => {
        const div = document.createElement("div");
        div.className = "cell";
        div.oncontextmenu = e => {
          e.preventDefault();
          toggleFlag(i);
        };
        div.onclick = () => openCell(i);
        gridEl.appendChild(div);
      });
    }

    function neighbors(i) {
      const x = i % SIZE;
      const y = Math.floor(i / SIZE);
      const result = [];

      for (let dx = -1; dx <= 1; dx++) {
        for (let dy = -1; dy <= 1; dy++) {
          if (dx === 0 && dy === 0) continue;
          const nx = x + dx;
          const ny = y + dy;
          if (nx >= 0 && nx < SIZE && ny >= 0 && ny < SIZE) {
            result.push(ny * SIZE + nx);
          }
        }
      }
      return result;
    }

    function openCell(i) {
      if (gameOver) return;
      const cell = cells[i];
      const el = gridEl.children[i];
      if (cell.open || cell.flag) return;

      cell.open = true;
      el.classList.add("open");

      if (cell.mine) {
        el.classList.add("mine");
        el.textContent = "ðŸ’£";
        revealMines();
        alert("Game Over");
        gameOver = true;
        return;
      }

      if (cell.count > 0) {
        el.textContent = cell.count;
        el.classList.add("n" + cell.count);
      } else {
        neighbors(i).forEach(openCell);
      }

      checkWin();
    }

    function toggleFlag(i) {
      if (gameOver) return;
      const cell = cells[i];
      const el = gridEl.children[i];
      if (cell.open) return;

      cell.flag = !cell.flag;
      el.classList.toggle("flag", cell.flag);
    }

    function revealMines() {
      cells.forEach((c, i) => {
        if (c.mine) {
          const el = gridEl.children[i];
          el.classList.add("mine");
          el.textContent = "ðŸ’£";
        }
      });
    }

    function checkWin() {
      const won = cells.every(c => c.open || c.mine);
      if (won) {
        alert("You Win! ðŸŽ‰");
        gameOver = true;
      }
    }

    startGame();
  </script>
</body>
</html>
